<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".src.recommend.RecommendActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/bg_round"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11.5sp"
            android:text="잠못드는분식점에 오신것을 환영합니다!"
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8.5sp"
            android:text="메뉴 추천을 받으시겠습니까?"
            android:textColor="#000000"
            android:textSize="32.5sp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recommend_iv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="45dp"
                android:src="@drawable/btn_yes" />

            <ImageView
                android:id="@+id/recommend_iv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/brn_no" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recommend_iv_speak"
        android:src="@drawable/ic_btn_speak"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="100dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#707070"
        android:lineSpacingExtra="11.5sp"
        android:text="AI와 이야기해보세요!"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="80dp"/>

</FrameLayout>