<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.recommend.RecommendActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5.8sp"
        android:text="네바분식에 오신것을 환영합니다!"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="21.3sp"
        android:textColor="#000000"
        android:lineSpacingExtra="8.5sp"
        android:text="메뉴 추천을 받으시겠습니까?"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="90dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp">
            <Button
                android:id="@+id/recommend_btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="5.8sp"
        android:id="@+id/recommend_tv_test"/>



</LinearLayout>